        <TextBox x:Name="tbPassword" Height="35" Width="200" Canvas.Left="103" Canvas.Top="99" HorizontalAlignment="Center"/>
        <Label Content="Логин:" Canvas.Left="103" FontSize="16" Canvas.Top="66" HorizontalAlignment="Center" Foreground="#FFFDCA00" />
        <Label Content="Пароль:" Canvas.Left="103" FontSize="16" Canvas.Top="138" HorizontalAlignment="Center" Foreground="#FFFDCA00" />
        <Button Content="Войти" Height="35" Width="169" x:Name="btnEntry" Canvas.Left="119" Canvas.Top="210" Click="btnEntry_Click" Background="#FFFECB00" Foreground="#FFCE2F45"/>
        <Button Content="Гостевой режим" Height="35" Width="261" 
                x:Name="btnGuest" Canvas.Left="69" Canvas.Top="258" 
                Background="#FFFDCA00" Foreground="#FFCE2F45" Click="btnGuest_Click" RenderTransformOrigin="0.542,0.554"/>
    </Canvas>
</Window>

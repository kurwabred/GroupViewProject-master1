        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF014165" Offset="0.627"/>
            <GradientStop Color="#FF006C94" Offset="0.195"/>
            <GradientStop Color="#FF006C94" Offset="0.441"/>
        </LinearGradientBrush>
    </Window.Background>
    <Canvas>
        <Canvas.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF009FD9" Offset="0.538"/>
                <GradientStop Color="#FF003244" Offset="0.038"/>
                <GradientStop Color="#FF003244" Offset="0.969"/>
            </LinearGradientBrush>
        </Canvas.Background>
        <Label Content="Добро пожаловать!" Canvas.Left="66" FontSize="25" HorizontalAlignment="Center" Foreground="#FFFDCA00" />
        <Label Content="Авторизуйтесь или выберите гостевой режим" FontSize="14" HorizontalAlignment="Center" Width="365" Canvas.Top="38" Canvas.Left="23" Foreground="#FFFDCA00" />
